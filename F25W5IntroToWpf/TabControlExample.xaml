<Window x:Class="F25W5IntroToWpf.TabControlExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F25W5IntroToWpf"
        mc:Ignorable="d"
        Title="TabControlExample" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Personal Info">
                <Canvas>
                    <Label Content="Label" Canvas.Left="108" Canvas.Top="99"/>
                    <TextBox Canvas.Left="194" TextWrapping="Wrap" Text="TextBox" Canvas.Top="125" Width="120"/>
                    <Button Content="Button" Canvas.Left="397" Canvas.Top="99"/>
                </Canvas>
            </TabItem>

            <TabItem Header="Hobbies">
                <StackPanel>
                    <CheckBox Content="Singing"/>
                    <CheckBox Content="Gardening"/>
                    <CheckBox Content="Guitar"/>
                    <CheckBox Content="Gaming"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
