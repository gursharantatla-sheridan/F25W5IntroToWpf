<Window x:Class="F25W5IntroToWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F25W5IntroToWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="404*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnShow" Content="Show" HorizontalAlignment="Left" Margin="421,79,0,0" VerticalAlignment="Top" Height="63" Width="120" Click="btnShow_Click" Grid.Row="2"/>
        <TextBox x:Name="txtFirstname" HorizontalAlignment="Left" Margin="280,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" GotFocus="txtFirstname_GotFocus" LostFocus="txtFirstname_LostFocus" Grid.Row="2" />
        <Label Content="Enter your firstname" HorizontalAlignment="Left" Margin="158,98,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <Button x:Name="btnShowGridWin" Content="Show Grid Window" HorizontalAlignment="Left" Margin="246,225,0,0" VerticalAlignment="Top" Height="69" Width="188" Click="btnShowGridWin_Click" Grid.Row="2"/>

    </Grid>
</Window>
